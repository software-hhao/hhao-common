<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <groupId>io.github.software-hhao</groupId>
        <artifactId>hhao-common-parent</artifactId>
        <version>1.0.0</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <inceptionYear>2021</inceptionYear>
    <groupId>io.github.software-hhao</groupId>
    <artifactId>hhao-common</artifactId>
    <version>${reversion}</version>
    <packaging>pom</packaging>

    <name>hhao-common</name>
    <description>Top pom.xml file</description>

    <scm>
        <url>https://github.com/software-hhao/hhao-common</url>
        <connection>scm:git:ssh://git@github.com/software-hhao/hhao-common.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/software-hhao/hhao-common.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <properties>
        <reversion>1.0.0</reversion>
    </properties>

    <modules>
        <module>hhao-common-core</module>
        <module>hhao-money</module>
        <module>hhao-jackson</module>
        <module>hhao-utils</module>
        <module>hhao-mybatis</module>
        <module>hhao-mybatis-spring-boot-starter</module>
        <module>hhao-spring-boot-starter</module>
        <module>hhao-web-spring-boot-starter</module>
    </modules>

    <dependencyManagement>
        <dependencies>
            <!--二方包-->
            <dependency>
                <groupId>io.github.software-hhao</groupId>
                <artifactId>hhao-common-core</artifactId>
                <version>${reversion}</version>
            </dependency>

            <dependency>
                <groupId>io.github.software-hhao</groupId>
                <artifactId>hhao-money</artifactId>
                <version>${reversion}</version>
            </dependency>

            <dependency>
                <groupId>io.github.software-hhao</groupId>
                <artifactId>hhao-jackson</artifactId>
                <version>${reversion}</version>
            </dependency>
            
            <dependency>
                <groupId>io.github.software-hhao</groupId>
                <artifactId>hhao-utils</artifactId>
                <version>${reversion}</version>
            </dependency>
            
            <dependency>
                <groupId>io.github.software-hhao</groupId>
                <artifactId>hhao-mybatis</artifactId>
                <version>${reversion}</version>
            </dependency>
            
            <dependency>
                <groupId>io.github.software-hhao</groupId>
                <artifactId>hhao-mybatis-spring-boot-starter</artifactId>
                <version>${reversion}</version>
            </dependency>
            
            <dependency>
                <groupId>io.github.software-hhao</groupId>
                <artifactId>hhao-spring-boot-starter</artifactId>
                <version>${reversion}</version>
            </dependency>
            
            <dependency>
                <groupId>io.github.software-hhao</groupId>
                <artifactId>hhao-web-spring-boot-starter</artifactId>
                <version>${reversion}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>${maven-source-plugin.version}</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>